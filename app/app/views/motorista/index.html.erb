
<p id="notice"><%= notice %></p>

<div class="col-lg-12 lista-m">
<h1>Lista de Motoristas</h1>
</div>

<div class="col-lg-12 bbox">
<div class="content-box tbox">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th class="td2">Cpf</th>
      <th class="td3">Tipo caminhao</th>
      <th class="td4">Latitude</th>
      <th class="td5">Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @motorista.each do |motoristum| %>
      <tr>
        <td class="td1"><%= motoristum.nome %></td>
        <td class="td2"><%= motoristum.cpf %></td>
        <td class="td3"><%= motoristum.tipo_caminhao %></td>
        <td class="td4"><%= motoristum.latitude %></td>
        <td class="td5"><%= motoristum.longitude %></td>
        <td class="td6"><%= link_to 'Mostrar', motoristum %></td>
        <td class="td7"><%= link_to 'Editar', edit_motoristum_path(motoristum) %></td>
          <td class="td7"><%= link_to 'Excluir', motoristum, method: :delete, data: { confirm: 'VocÃª tem certeza?' } %></td>
        </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>

<br>

<div class="col-lg-12 new-mot">
<%= link_to 'Novo Motorista', new_motoristum_path %>
